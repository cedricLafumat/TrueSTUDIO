#include "main.h"
#include <local_leds.h>
#include "local_button.h"
#include "cmsis_os.h"

extern osSemaphoreId_t localButtonReleasedQueueHandle;

void thread_red(void *argument){
	while (1){
		LedRedOn();
		osDelay(400);
		LedRedOff();
		osDelay(400);
	}
}

void thread_blue(void *argument){
	WaitForLocalButtonReleased();
	while (1){
		LedBlueOn();
		osDelay(400);
		LedBlueOff();
		osDelay(400);
	}
}

void thread_green(void *argument){
	localButtonReleasedQueueHandle;
	while (1){
		LedGreenOn();
		osDelay(400);
		LedGreenOff();
		osDelay(400);
	}
}

void thread_timer(void *argument){
	while (1){
		osDelay(100);
	}
}
