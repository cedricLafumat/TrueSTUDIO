#include<stdio.h>
#include <pthread.h>
#include <unistd.h>

void *print_hello_world(void *arg){
	while(1){
		printf("Hello World!\n");
		sleep(2);
	}
	(void) arg;
	pthread_exit(NULL);
}


int main(void){

	pthread_t thread1;

	pthread_create(&thread1, NULL, print_hello_world, NULL);
	while(1){
		sleep(2);
	}
	return 0;
}
