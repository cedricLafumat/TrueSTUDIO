#include<stdio.h>
#include <pthread.h>
#include <unistd.h>

void *print_hello_world(void *arg){
	printf("Hello World!\n");
	(void) arg;

}


int main(void){

	pthread_t thread1;

	fflush(stdout);
	while(1){
		pthread_create(&thread1, NULL, print_hello_world, NULL);
		sleep(1);
	}
	return 0;
}
