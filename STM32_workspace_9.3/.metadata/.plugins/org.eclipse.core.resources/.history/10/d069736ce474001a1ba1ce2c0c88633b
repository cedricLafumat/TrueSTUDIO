void *write_in_tab(void *arg){
	g_tab[0] = 0;
	g_tab[1] = 20;
	g_tab[2] = 30;
	g_tab[3] = 40;
	g_tab[4] = 50;

	printf("%d/%d/%d/%d/%d", g_tab[0], g_tab[1], g_tab[2], g_tab[3], g_tab[4]);

	(void) arg;
	pthread_exit(NULL);
}

int main(void){

	/*pthread_t thread1;
	pthread_t thread2;

	pthread_create(&thread1, NULL, print_hello_world, NULL);
	sleep(1);
	pthread_create(&thread2, NULL, print_world_is_mine, NULL);*/

	pthread_t write_tab;

	pthread_create(&write_tab, NULL, write_in_tab, NULL);

	int cpt = 0;

	while(cpt < 5){
		cpt += 1;
		sleep(2);
	}
	return 0;
}
