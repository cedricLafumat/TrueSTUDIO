#ifndef GAME_H_
#define GAME_H_


typedef struct{
	int RValue;
	int GValue;
	int BValue;
}RGB;

typedef struct{
	int number;
	int status;
	int countdown;
	int owner;
}Timer;


typedef enum {QUEUE_READ, QUEUE_SEND} QUEUE_ID;

typedef enum {NUMBER, P4, MORPION, CLAVIER, DEPLACEMENT, DISPLAY_TOKEN} COMMAND_TYPE;




void SetLedMatrice();
void set_number(int number);
void send_message(QUEUE_ID queue, char *message, int message_lenght);
int receive_message(QUEUE_ID queue, char *message, int message_lenght);
void start_game(void);
void *read_input(void *arg);
void *application(void *arg);
void *show_board(void *arg);
void *timer(void *arg);


#endif /* GAME_H_ */
