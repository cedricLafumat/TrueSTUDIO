#include <local_leds.h>
#include "local_button.h"
#include "cmsis_os.h"

void thread_send(void *argument){
	while (1){
		/*LedRedOn();
		osDelay(400);
		LedRedOff();
		osDelay(400);*/
		if (WaitForLocalButtonReleased()){
			LedBlueOn();
			osDelay(400);
			LedBlueOff();
			osDelay(400);
		}
	}
}

