#include<stdio.h>
#include<string.h>	//strlen
#include<sys/socket.h>
#include<arpa/inet.h>	//inet_addr
#include"debug.h"
#include"socket.h"
#include<errno.h>
#include<unistd.h>

int create_socket()
{
	int socket_desc;
	socket_desc = socket(AF_INET , SOCK_STREAM , 0);

	if (socket_desc == -1)
	{
		error_printf("Could not create socket, num error [%i], name message : [%s]\n", errno,strerror(errno));
	}
	return socket_desc;
}

void connect_to_remote_server(int socket_desc)
{
	struct sockaddr_in server;

	server.sin_addr.s_addr = inet_addr(SRV_IP);
	server.sin_family = AF_INET;
	server.sin_port = htons( SRV_PORT );
	if (connect(socket_desc , (struct sockaddr *)&server , sizeof(server)) < 0)
	{
		error_printf("connect error, num error [%i], name message : [%s]\n", errno,strerror(errno));
	}
	else{
		puts("Connected");
	}
}


int main(int argc , char *argv[])
{
	int socket_desc;
	char *message;

	//Create socket
	socket_desc = create_socket();

	//Connect to remote server
	connect_to_remote_server(socket_desc);

	//Send some data

	while (1){
		message = "Hello world !\n";
		if( send(socket_desc , message , strlen(message) , 0) < 0)
		{
			error_printf("Send failed, num error [%i], name message : [%s]\n", errno,strerror(errno));
			socket_desc = create_socket();
			connect_to_remote_server(socket_desc);
		}
		else{
			puts("Data Send\n");
		}
		sleep(2);
	}
	return 0;
}
